{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es5", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "target": "es5"
  },
  "jsdoc": "jsdoc",
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
